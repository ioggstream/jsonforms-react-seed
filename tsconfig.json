{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true
  },
  "include": [
    "src"
  ]
}